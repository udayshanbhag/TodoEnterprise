    "version": "0.2.0",
    "configurations": [
    {
        "name": ".NET Core Launch (console)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/webapp/bin/Debug/netcoreapp3.1/todoapi.dll",
        "args": [],
        "cwd": "${workspaceFolder}/webapp",
        "stopAtEntry": false,
        "console": "internalConsole"
    },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/webui"
        }
    ]
}